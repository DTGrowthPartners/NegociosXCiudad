generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Lead {
  id               String     @id @default(cuid())
  businessName     String
  city             String
  category         String
  address          String?
  phone            String?
  websiteUrl       String?
  instagramUrl     String?
  hasWebsite       Boolean    @default(false)
  hasInstagram     Boolean    @default(false)
  opportunityScore Int        @default(0)
  status           String     @default("NEW")
  notes            String?
  scrapeRunId      String?
  scrapeRun        ScrapeRun? @relation(fields: [scrapeRunId], references: [id])
  createdAt        DateTime   @default(now())
  updatedAt        DateTime   @updatedAt

  @@index([city])
  @@index([category])
  @@index([status])
  @@index([opportunityScore])
}

model ScrapeRun {
  id          String    @id @default(cuid())
  city        String
  category    String
  startedAt   DateTime  @default(now())
  finishedAt  DateTime?
  status      String    @default("RUNNING")
  totalFound  Int       @default(0)
  totalSaved  Int       @default(0)
  errorsCount Int       @default(0)
  errors      String?
  leads       Lead[]
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@index([status])
  @@index([city])
}
